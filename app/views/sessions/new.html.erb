<div class="ui one column middle aligned center aligned grid">
  <div class="six wide column">
    <h2 class="ui teal image header">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
<!--    <form class="ui large form">-->
    <%= form_for(:session, :html => {class: "ui large form", role: "form"}, url: login_path) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <%= f.label :username, "Username", style: "text-align: left;" %>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :username, placeholder: "Username", autofocus: true %>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password", style: "text-align: left;" %>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
          </div>
        </div>
        <%= f.submit "Login", class: "ui fluid large teal submit button" %>
      </div>

      <div class="ui error message"></div>
    <% end %>
<!--    </form>-->

    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  </div>
</div>